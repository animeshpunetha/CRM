<%- include('../partials/header') %>

  <div class="card shadow-sm mb-4">
    <div class="card-header bg-primary text-white d-flex justify-content-between align-items-center">
      <h2 class="card-title mb-0">All Accounts</h2>
      <div>
        <a href="/accounts/new" class="btn btn-light">New Account</a> <a href="/accounts/import"
          class="btn btn-light">Import XLSX</a> <a href="/accounts/export" class="btn btn-light">Export XLSX</a>
      </div>
    </div>
    <div class="card-body">
      <% if (accounts.length===0) { %>
        <div class="alert alert-info" role="alert">
          No accounts found. Create your first account now!
        </div>
        <% } else { %>
          <div class="table-responsive">
            <table class="table table-hover table-striped">
              <thead class="table-light">
                <tr>
                  <th>Owner</th>
                  <th><a
                    href="?sort=name&order=<%= currentSort === 'name' && currentOrder === 'asc' ? 'desc' : 'asc' %>">
                    Name <%= currentSort==='name' ? (currentOrder==='asc' ? '▲' : '▼' ) : '' %>
                  </a></th>
                  <th><a
                    href="?sort=type&order=<%= currentSort === 'type' && currentOrder === 'asc' ? 'desc' : 'asc' %>">
                    Type <%= currentSort==='type' ? (currentOrder==='asc' ? '▲' : '▼' ) : '' %>
                  </a></th>
                  <th><a
                    href="?sort=industry&order=<%= currentSort === 'industry' && currentOrder === 'asc' ? 'desc' : 'asc' %>">
                    Industry <%= currentSort==='industry' ? (currentOrder==='asc' ? '▲' : '▼' ) : '' %>
                  </a></th>
                  <th>Billing Address</th>
                  <th>Actions</th>
                </tr>
              </thead>
              <tbody>
                <% accounts.forEach(account=> { %>
                  <tr>
                    <td>
                      <%= account.owner ? account.owner.name : '—' %>
                    </td>
                    <td>
                      <%= account.name %>
                    </td>
                    <td>
                      <%= account.type %>
                    </td>
                    <td>
                      <%= account.industry %>
                    </td>
                    <td>
                      <%= account.billing_street %><br>
                        <%= account.billing_city %>, <%= account.billing_state %>
                            <%= account.billing_code %><br>
                              <%= account.billing_country %>
                    </td>
                    <td class="text-nowrap">
                      <a href="/accounts/<%= account._id %>" class="btn btn-sm btn-info me-2">View</a>
                      <a href="/accounts/<%= account._id %>/edit" class="btn btn-sm btn-warning me-2">Edit</a>
                      <form action="/accounts/<%= account._id %>/delete?_method=DELETE" method="POST" class="d-inline">
                        <button type="submit" class="btn btn-sm btn-danger"
                          onclick="return confirm('Are you sure you want to delete this account?')">Delete</button>
                      </form>
                    </td>
                  </tr>
                  <% }) %>
              </tbody>
            </table>
          </div>
          <% } %>
    </div>
    <div class="card-footer text-end">
    </div>
  </div>

  <%- include('../partials/footer') %>