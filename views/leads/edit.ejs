<%- include('../partials/header') %>

<div class="card shadow-sm mb-4">
  <div class="card-header bg-primary text-white">
    <h2 class="card-title mb-0">Edit Lead</h2>
  </div>
  <div class="card-body">
    <% if (errors.length) { %>
      <div class="alert alert-danger">
        <ul>
          <% errors.forEach(e => { %><li><%= e.msg %></li><% }) %>
        </ul>
      </div>
    <% } %>

    <form action="/leads/<%= lead._id %>/edit?_method=PUT" method="POST">
      <div class="mb-3">
        <label for="owner" class="form-label">Owner</label>
        <select name="owner" id="owner" class="form-select" required>
          <option value="">-- Select Owner --</option>
          <% users.forEach(u => { %>
            <option value="<%= u._id %>"
              <%= lead.owner.toString() === u._id.toString() ? 'selected' : '' %>>
              <%= u.name %>
            </option>
          <% }) %>
        </select>
      </div>

      <div class="mb-3">
        <label for="name" class="form-label">Name</label>
        <input name="name" id="name" value="<%= lead.name %>" type="text" class="form-control" required>
      </div>

      <div class="mb-3">
        <label for="company" class="form-label">Company</label>
        <input name="company" id="company" value="<%= lead.company %>" type="text" class="form-control" required>
      </div>

      <div class="mb-3">
        <label for="email" class="form-label">Email</label>
        <input name="email" id="email" value="<%= lead.email %>" type="email" class="form-control" required>
      </div>

      <div class="mb-3">
        <label for="phone" class="form-label">Phone</label>
        <input name="phone" id="phone" value="<%= lead.phone %>" type="text" class="form-control" required>
      </div>

      <div class="mb-3">
        <label for="description" class="form-label">Description</label>
        <textarea name="description" id="description" class="form-control" rows="3"><%= lead.description %></textarea>
      </div>

      <div class="d-flex justify-content-end gap-2 mt-4">
        <button type="submit" class="btn btn-success">Update Lead</button>
        <a href="/leads" class="btn btn-secondary">Cancel</a>
      </div>
    </form>
  </div>
</div>

<%- include('../partials/footer') %>
