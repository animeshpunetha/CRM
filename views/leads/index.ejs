<%- include('../partials/header') %>

  <div class="card shadow-sm mb-4">
    <div class="card-header bg-primary text-white d-flex justify-content-between align-items-center">
      <h2 class="card-title mb-0">All Leads</h2>
      <div>
        <a href="/leads/new" class="btn btn-light me-2">New Lead</a> <a href="/leads/import"
          class="btn btn-light">Import XLSX</a> <a href="/leads/export" class="btn btn-light">Export XLSX</a>
      </div>
    </div>
    <div class="card-body">
      <% if (leads && leads.length> 0) { %>
        <div class="table-responsive">
          <table class="table table-hover table-striped">
            <thead class="table-light">
              <tr>
                <th><a
                    href="?sort=owner.name&order=<%= currentSort === 'owner.name' && currentOrder === 'asc' ? 'desc' : 'asc' %>">
                    Owner <%= currentSort==='owner.name' ? (currentOrder==='asc' ? '▲' : '▼' ) : '' %>
                  </a></th>
                <th><a href="?sort=name&order=<%= currentSort === 'name' && currentOrder === 'asc' ? 'desc' : 'asc' %>">
                    Name <%= currentSort==='name' ? (currentOrder==='asc' ? '▲' : '▼' ) : '' %>
                  </a></th>
                <th><a
                    href="?sort=company&order=<%= currentSort === 'company' && currentOrder === 'asc' ? 'desc' : 'asc' %>">
                    Company <%= currentSort==='company' ? (currentOrder==='asc' ? '▲' : '▼' ) : '' %>
                  </a></th>
                <th><a
                    href="?sort=email&order=<%= currentSort === 'email' && currentOrder === 'asc' ? 'desc' : 'asc' %>">
                    Email <%= currentSort==='email' ? (currentOrder==='asc' ? '▲' : '▼' ) : '' %>
                  </a></th>
                <th><a
                    href="?sort=phone&order=<%= currentSort === 'phone' && currentOrder === 'asc' ? 'desc' : 'asc' %>">
                    Phone <%= currentSort==='phone' ? (currentOrder==='asc' ? '▲' : '▼' ) : '' %>
                  </a></th>
                <th><a
                    href="?sort=createdAt&order=<%= currentSort === 'createdAt' && currentOrder === 'asc' ? 'desc' : 'asc' %>">
                    Created At <%= currentSort==='createdAt' ? (currentOrder==='asc' ? '▲' : '▼' ) : '' %>
                  </a></th>
                <th>Actions</th>
              </tr>
            </thead>
            <tbody>
              <% leads.forEach(lead=> { %>
                <tr>
                  <td>
                    <%= lead.owner?.name || '—' %>
                  </td>
                  <td>
                    <%= lead.name %>
                  </td>
                  <td>
                    <%= lead.company %>
                  </td>
                  <td>
                    <%= lead.email %>
                  </td>
                  <td>
                    <%= lead.phone %>
                  </td>
                  <td>
                    <%= lead.createdAt.toLocaleDateString() %>
                  </td>
                  <td>
                    <a href="/leads/<%= lead._id %>" class="btn btn-sm btn-info me-2">View</a>
                    <a href="/leads/<%= lead._id %>/edit" class="btn btn-sm btn-warning">Edit</a>
                    <form action="/leads/<%= lead._id %>/delete?_method=DELETE" method="POST" class="d-inline">
                      <button class="btn btn-sm btn-danger"
                        onclick="return confirm('Are you sure you want to delete this lead?')">Delete</button>
                    </form>
                  </td>
                </tr>
                <% }) %>
            </tbody>
          </table>
        </div>
        <% } else { %>
          <div class="alert alert-info" role="alert">
            No leads found. Why not add one or import from Excel?
          </div>
          <% } %>
    </div>
    <div class="card-footer text-end">
    </div>
  </div>

  <%- include('../partials/footer') %>