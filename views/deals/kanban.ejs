<%- include('../partials/header') %>

<div class="container-fluid mt-4">
  <h2 class="mb-4">Deals Kanban View</h2>

  <div class="row d-flex flex-nowrap overflow-auto" style="gap: 1rem;">
    <% buckets.forEach(p => { %>
      <div class="card flex-shrink-0" style="min-width: 250px;">
        <div class="card-header text-white bg-primary">
          <strong><%= p %>% Probability</strong>
          <br>
          <small><%= grouped[p].count %> deal(s)</small><br>
          <small><%= grouped[p].formattedTotal %> total</small>
        </div>
        <div class="card-body p-2" style="max-height: 70vh; overflow-y: auto;">
          <% if (grouped[p].deals.length === 0) { %>
            <div class="text-muted text-center">No deals</div>
          <% } else { %>
            <% grouped[p].deals.forEach(deal => { %>
              <div class="card mb-2 border">
                <div class="card-body p-2">
                  <strong><%= deal.name %></strong><br>
                  <small>Account: <%= deal.account?.name || 'N/A' %></small><br>
                  <small>Owner: <%= deal.owner?.name || 'N/A' %></small><br>
                  <small>Amount: â‚¹<%= deal.amount.toLocaleString('en-IN') %></small><br>
                  <small>Due: <%= new Date(deal.due_date).toLocaleDateString() %></small>
                </div>
              </div>
            <% }); %>
          <% } %>
        </div>
      </div>
    <% }); %>
  </div>
</div>

<%- include('../partials/footer') %>
