<%- include('../partials/header') %>

  <div class="card shadow-sm mb-4">
    <div class="card-header bg-primary text-white d-flex justify-content-between align-items-center">
      <h2 class="card-title mb-0">All Deals</h2>
      <div>
        <a href="/deals/new" class="btn btn-light">New Deal</a> <a href="/deals/import" class="btn btn-light">Import
          XLSX</a> <a href="/deals/export" class="btn btn-light">Export XLSX</a> <a href="/deals/kanban" class="btn btn-light">Kanban View</a>
      </div>
    </div>
    <div class="card-body">
      <% if (deals.length===0) { %>
        <div class="alert alert-info" role="alert">
          No deals found. Start by creating a new deal!
        </div>
        <% } else { %>
          <div class="table-responsive">
            <table class="table table-hover table-striped">
              <thead class="table-light">
                <tr>
                  <th>Deal Owner</th>
                  <th><a
                    href="?sort=name&order=<%= currentSort === 'name' && currentOrder === 'asc' ? 'desc' : 'asc' %>">
                    Deal Name <%= currentSort==='name' ? (currentOrder==='asc' ? '▲' : '▼' ) : '' %>
                  </a></th>
                  <th><a
                    href="?sort=amount&order=<%= currentSort === 'amount' && currentOrder === 'asc' ? 'desc' : 'asc' %>">
                    Amount <%= currentSort==='amount' ? (currentOrder==='asc' ? '▲' : '▼' ) : '' %>
                  </a></th>
                  <th><a
                    href="?sort=probablity&order=<%= currentSort === 'probablity' && currentOrder === 'asc' ? 'desc' : 'asc' %>">
                    Probablity <%= currentSort==='probablity' ? (currentOrder==='asc' ? '▲' : '▼' ) : '' %>
                  </a></th>
                  <th>Contact</th>
                  <th>Account</th>
                  <th>Actions</th>
                </tr>
              </thead>
              <tbody>
                <% deals.forEach(deal=> { %>
                  <tr>
                    <td>
                      <%= deal.owner ? deal.owner.name : '—' %>
                    </td>
                    <td>
                      <%= deal.name %>
                    </td>
                    <td>₹<%= deal.amount ? deal.amount.toLocaleString() : '0' %>
                    </td>
                    <td>
                      <%= deal.probablity ? deal.probablity : '0' %>%
                    </td>
                    <td>
                      <%= deal.contact_person ? deal.contact_person.name : '—' %>
                    </td>
                    <td>
                      <%= deal.account ? deal.account.name : '—' %>
                    </td>
                    <td class="text-nowrap"> <a href="/deals/<%= deal._id %>" class="btn btn-sm btn-info me-2">View</a>
                      <a href="/deals/<%= deal._id %>/edit" class="btn btn-sm btn-warning me-2">Edit</a>
                      <form action="/deals/<%= deal._id %>?_method=DELETE" method="POST" class="d-inline">
                        <button type="submit" class="btn btn-sm btn-danger"
                          onclick="return confirm('Are you sure you want to delete this deal?')">Delete</button>
                      </form>
                    </td>
                  </tr>
                  <% }) %>
              </tbody>
            </table>
          </div>
          <% } %>
    </div>
    <div class="card-footer text-end">
    </div>
  </div>

  <%- include('../partials/footer') %>